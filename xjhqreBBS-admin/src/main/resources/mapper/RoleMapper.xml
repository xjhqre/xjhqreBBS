<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjhqre.admin.mapper.RoleMapper">

    <!-- 添加角色权限 -->
    <insert id="saveBatchRolePermission">
        insert into `t_role_permission` VALUES(`uid`, `role_uid`, `permissions_uid`)
        <foreach collection="permissionIds" separator="," item="permissionId">
            (null,#{uid},#{permissionId})
        </foreach>
    </insert>

    <!-- 分页查询角色 -->
    <select id="findRole" resultType="com.xjhqre.admin.entity.vo.RoleVO">
        select *
        from t_role
    </select>

</mapper>
