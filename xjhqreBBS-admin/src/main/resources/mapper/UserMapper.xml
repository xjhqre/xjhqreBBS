<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjhqre.admin.mapper.UserMapper">

    <!-- 设置用户角色 -->
    <insert id="saveUserRoles">
        insert into `t_user_role` VALUES
        <foreach collection="roleIds" separator="," item="roleId">
            (null,#{userUid},#{roleId})
        </foreach>
    </insert>

    <!-- 启用用户 -->
    <update id="enableUser">
        update `t_user` set `status`=1 where `uid` in
        <foreach item="id" index="index" collection="ids" open="("
                 separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 禁用用户 -->
    <update id="disableUser">
        update `t_user` set `status`=0 where `uid` in
        <foreach item="id" index="index" collection="ids" open="("
                 separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 分页查询用户信息 -->
    <select id="findUser" resultType="com.xjhqre.admin.entity.vo.UserVO">
        select *
        from t_user
    </select>

    <!-- 查询数据库中是否已存在 -->
    <select id="hasSameEmail" resultType="java.lang.Integer">
        select count(1)
        from t_user
        where email = #{email}
        limit 1
    </select>

    <!-- 是否已存在相同用户名 -->
    <select id="hasSameUsername" resultType="java.lang.Integer">
        select count(1)
        from t_user
        where user_name = #{userName}
        limit 1
    </select>
</mapper>
