<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjhqre.admin.mapper.AdminMapper">


    <!-- 查询管理员列表 -->
    <select id="findAdmin" resultType="com.xjhqre.admin.entity.vo.AdminVO">
        select *
        from t_admin
    </select>

    <!-- 根据名称查询管理员 -->
    <select id="getAdminUserByUserName" resultType="com.xjhqre.admin.entity.vo.AdminVO">
        select *
        from t_admin
        where user_name = #{username}
    </select>

    <!-- 批量启用管理员 -->
    <update id="enableAdminUser">
        update `t_admin` set `status`=1 where `uid` in
        <foreach item="id" index="index" collection="ids" open="("
                 separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 批量禁用管理员 -->
    <update id="disableAdminUser">
        update `t_admin` set `status`=0 where uid in
        <foreach item="id" index="index" collection="ids" open="("
                 separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>
